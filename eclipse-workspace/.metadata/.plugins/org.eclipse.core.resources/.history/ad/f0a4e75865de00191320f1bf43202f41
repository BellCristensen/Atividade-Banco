import javax.swing.JOptionPane;

public class CalcularMedia {

	void Calcular ( String disciplina, double notaAnderson, double notaJoaquim,  double notaJoao, double notaMaria, double notaAnderson1) {
		double media;
		media = (notaAnderson + notaJoaquim + notaJoao + notaMaria)/5;
		JOptionPane.showMessageDialog(null,
				"Disciplina :\n" + disciplina +
				"\nA nota de Anderson em LTP IV foi:" + notaAnderson +
				"\nA nota de João em LTP IV foi:\n" + notaJoaquim +
				"\nA nota de Joaquim em SO foi:\n" + notaJoao +
				"\nA nota de Maria em SO foi:\n" + notaMaria +
				"\nA nota de Anderson em SO foi:\n" + notaAnderson1);
	}
}
