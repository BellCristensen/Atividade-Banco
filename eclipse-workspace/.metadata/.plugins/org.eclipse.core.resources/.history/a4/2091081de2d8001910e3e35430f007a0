import javax.swing.JOptionPane;

public class Rotas {
	public static void main(String[] args) {
		

	String rota1, rota2, rota3, rota4;
	double distancia;
	
	rota1 = JOptionPane.showInputDialog("Digite a quilometragem da atual do carro");
	rota2 = JOptionPane.showInputDialog("Digite a quilometragem da atual do carro");
	rota3 = JOptionPane.showInputDialog("Digite a quilometragem da atual do carro");
	rota4 = JOptionPane.showInputDialog("Digite a quilometragem da atual do carro");
	
	distancia = Double.parseDouble(JOptionPane.showInputDialog("A distancia que você percorreu é:" + rota1 + rota2 + rota3 + rota4));

	}
}
